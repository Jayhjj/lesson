<%include ../public/header.ejs%>

<%include ../public/headertop.ejs%>


<div class="container-fluid">
  <div class="row">
    <%include ../public/nav.ejs%>

    <div class="col-sm-10">

      <div class="panel panel-default">

        <div class="panel-heading">
          商家列表
        </div>
        <div class="panel-body">
          <div class="table-responsive input-form">
            <form action="/admin/shop/doEdit" method="post" enctype="multipart/form-data">
              <ul>
                <input type="hidden" name="id" value="<%=list['_id']%>"/>
                <li>  商家名称: <input  type="text" name="title" value="<%=list['title']%>"/></li>
                <li>  图片: <input type="file" name="pic"/></li>

                <img src="/<%=list['pic']%>" alt="" style="width:60px;"/>

                <li>描述：<input  type="text" name="description" value="<%=list.description%>"/></li>
                <li>地址：<input  type="text" name="address" value="<%=list.address%>"/></li>
                <li> 状态:
                  显示：<input type="radio" value="1" name="status" checked/>
                  　
                  隐藏：<input type="radio" value="0" name="status"/>

                </li>
                <li>
                  <br/>
                  <button type="submit" class="btn btn-default" id="sub">提交</button>
                </li>

              </ul>


            </form>
          </div>
        </div>


      </div>

    </div>
  </div>
</div>
<script>
  $('#sub').click(function(){
    var time=new Date();
    time=time.toLocaleString();
    $('form ul').append('<input'+' '+'type="hidden"'+' '+'name="time"'+' '+'value="'+time+'"/>');
  })

</script>
</body>
</html>
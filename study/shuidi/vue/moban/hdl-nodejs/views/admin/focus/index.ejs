<%include ../public/header.ejs%>

<%include ../public/headertop.ejs%>

<div class="container-fluid">
    <div class="row">
        <%include ../public/nav.ejs%>

        <div class="col-sm-10">
            <ol class="breadcrumb">
                <li class="active">图片管理
                </li>
                <li class="active">图片列表
                </li>
            </ol>
            <div class="panel panel-default">
                <div class="panel-heading">
                    搜索
                </div>
                <div class="panel-body">
                    <form role="form" class="form-inline">
                        <div class="form-group">
                            <label for="name">名称</label>
                            <input type="text" class="form-control" id="name" placeholder="请输入名称">
                        </div>

                        <div class="form-group">
                            <button type="submit" class="btn btn-default">开始搜索</button>
                        </div>
                    </form>
                </div>
            </div>
            <!--
                列表展示
            -->
            <div class="table-responsive">
                <table class="table table-striped ">
                    <thead>
                    <tr>
                        <th>编号</th>
                        <th>头像</th>
                        <th>名称</th>
                        <th>状态</th>
                        <th>时间</th>

                        <th class="text-center">操作</th>
                    </tr>
                    </thead>
                    <tbody>


                    <%for(var i=0;i<list.length;i++){%>

                    <tr>
                        <td><%=i+1%></td>
                        <td><img src="/<%=list[i].pic%>" style="height: 40px; width:40px;" /> </td>
                        <td><%=list[i].title%></td>
                        <td><%=list[i].status%></td>
                        <td><%=list[i].add_time%></td>

                        <td class="text-center">

                            <a href="/admin/focus/edit?id=<%=list[i]._id%>" class="btn btn-success">修改</a>
                            　
                            <a href="/admin/focus/doDd?id=<%=list[i]._id%>" class="btn btn-danger">删除</a>

                        </td>
                    </tr>

                    <%}%>
                    </tbody>
                </table>
            </div>

        </div>
    </div>
</div>

</body>
</html>
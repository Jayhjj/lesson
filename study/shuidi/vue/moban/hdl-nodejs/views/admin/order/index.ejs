<%include ../public/header.ejs%>

<%include ../public/headertop.ejs%>

<div class="container-fluid">
    <div class="row">
        <%include ../public/nav.ejs%>

        <div class="col-sm-10">

            <div class="panel panel-default">
                <div class="panel-heading">
                    商品订单管理
                </div>
                <div class="panel-body">
                    <form role="form" class="form-inline">
                        <div class="form-group">
                            <label for="name">名称</label>
                            <input type="text" class="form-control" name="keyword" value="" id="name" placeholder="请输入名称">
                        </div>

                        <div class="form-group">
                            <button type="submit" class="btn btn-default">开始搜索</button>
                        </div>
                    </form>
                </div>
            </div>
            <!--
                列表展示
            -->
            <div class="table-responsive">
                <table class="table table-striped ">
                    <thead>
                    <tr>
                        <th>序号</th>
                        <th>姓名</th>
                        <th>订单更新时间</th>
                        <th>手机号</th>




                        <th class="text-center">操作</th>
                    </tr>
                    </thead>
                    <%for(var i=0;i<list.length;i++){%>

                    <tr>
                        
                        <td><%=i+1%></td>
                        <td><%=list[i].name%></td>
                        <td><%=list[i].add_time%></td>
                        <td><%=list[i].tel%></td>



                        <td class="text-center">


                             <a href="/admin/order/add?id=<%=list[i]._id%>" class="btn btn-info">显示全部</a>
                            <a href="/admin/order/delete?id=<%=list[i]._id%>" class="btn btn-danger">删除</a>

                        </td>
                    </tr>

                    <%}%>
                </table>
            </div>

        </div>
    </div>
</div>

</body>
</html>
<%include ../public/header.ejs%>


<%include ../public/headertop.ejs%>




<div class="container-fluid">
  <div class="row">

    <%include ../public/nav.ejs%>


    <div class="col-sm-10">
      <ol class="breadcrumb">
        <li class="active">用户管理
        </li>
        <li class="active">用户列表
        </li>
      </ol>
      <div class="panel panel-default">

        <div class="panel-heading">
          增加用户
        </div>
        <div class="panel-body">
          <div class="table-responsive input-form">
            <!--
                enctype="multipart/form-data"注意
                action="/admin/user/doAdd"
            -->

            <form action="/admin/user/doAdd" method="post"  enctype="multipart/form-data">
              <ul>
                <li>  用户名称: <input type="text" name="username"/></li>
                <li>  用户密码: <input type="password" name="password"/></li>
                <li>  确定密码: <input type="password" name="repassword"/></li>
                <li>  用户头像: <input type="file" name="face"/></li>
                <li>  用户状态:
                  显示：<input type="radio" value="1" name="status" checked/>
                  　
                  隐藏：<input type="radio" value="0" name="status"/>

                </li>


                <li>
                  <br/>
                  <button type="submit" class="btn btn-default" id="sub">提交</button>
                </li>

              </ul>


            </form>
          </div>
        </div>


      </div>

    </div>
  </div>
</div>
<script>
  $('#sub').click(function(){
    var time=new Date();
    time=time.toLocaleString();
    $('form ul').append('<input'+' '+'type="hidden"'+' '+'name="time"'+' '+'value="'+time+'"/>');
  })
</script>
</body>
</html>
<%include ../public/header.ejs%>

<%include ../public/headertop.ejs%>


<div class="container-fluid">
    <div class="row">
        <%include ../public/nav.ejs%>

        <div class="col-sm-10">

            <div class="panel panel-default">

                <div class="panel-heading">
                    增加新闻
                </div>
                <div class="panel-body">
                    <div class="table-responsive input-form">
                        <form action="/admin/news/doEdit" method="post" enctype="multipart/form-data">
                            <ul>
                                <input type="hidden" name="id" value="<%=list['_id']%>"/>

                                <li> 新闻标题: <input  type="text" name="title" value="<%=list['title']%>"/></li>

                                <li> 新闻作者: <input  type="text" name="author" value="<%=list['author']%>" /></li>

                                <li>  新闻图片: <input type="file" name="pic"/></li>

                                <img src="/<%=list['pic']%>" alt="" style="width:60px;"/>



                                <li>
                                    商品简介:
                                    <textarea name="description" id="" cols="60" rows="8"><%=list.description%></textarea>
                                </li>


                                <li>
                                    新闻详情:
                                    <textarea name="content" id="content" cols="80" rows="8"><%=list.content%></textarea>
                                </li>

                                <li> 状态:
                                    显示：<input type="radio" value="1" name="status" checked/>
                                    　
                                    隐藏：<input type="radio" value="0" name="status"/>

                                </li>
                                <li>
                                    <br/>
                                    <button type="submit" class="btn btn-default" id="sub">提交</button>
                                </li>

                            </ul>


                        </form>
                    </div>
                </div>


            </div>

        </div>
    </div>
</div>
<script src="/admin/xheditor/xheditor-1.2.2.min.js" charset="utf-8"></script>
<script src="/admin/xheditor/xheditor_lang/zh-cn.js" charset="utf-8"></script>
<script>
    $('#sub').click(function(){
        var time=new Date();
        time=time.toLocaleString();
        $('form ul').append('<input'+' '+'type="hidden"'+' '+'name="time"'+' '+'value="'+time+'"/>');
    })
    $('#content').xheditor({
        html5Upload: false,   /*必须这样设置 */
        upMultiple: '3',  /*最多上传的数量*/
        tools:'full',   /*工具*/
        skin:'default',  /*批复*/
        width:600, height:300,
        upImgUrl:"/admin/news/upload",   /*上传图片提交的地址*/
        upImgExt:"jpg,jpeg,gif,png"   /*允许上传的格式*/
    });
</script>
</body>
</html>